generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}
enum TicketStatus {
  PENDING
  PAID
  USED
  CANCELLED
}

model User {
  id       String  @id @default(cuid())
  name     String
  email    String  @unique
  phone    String?
  emailConsent Boolean @default(false)
  createdAt DateTime @default(now())
  

  tickets  Ticket[]
}

model TicketType {
  id        String @id @default(cuid())
  name      String
  price     Int
  quota     Int
  soldCount Int @default(0)

  tickets   Ticket[]
}

model Ticket {
  id          String   @id @default(cuid())
  ticketCode  String   @unique
  status      TicketStatus
  attendee    String?
  checkedInAt DateTime?
  expiryDate  DateTime?

  userId        String
  user          User @relation(fields: [userId], references: [id])

  ticketTypeId  String
  ticketType    TicketType @relation(fields: [ticketTypeId], references: [id])

  payments Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  provider  String
  amount    Int
  status    String
  paidAt    DateTime?

  ticketId  String  @unique
  ticket    Ticket  @relation(fields: [ticketId], references: [id])
}
